<div>
    <div class="md:flex justify-evenly mb-6">
        <div class="flex justify-between mx-auto w-full">
            {% if pagination.href.previous %}
                <div class="mx-auto mb-4">
                    <a class="previous-page" href="{{ pagination.href.previous | url }}">다음 페이지</a>
                </div>
            {% endif %}

            {% if pagination.href.next %}
                <div class="mx-auto mb-4">
                    <a class="next-page md:mb-2" href="{{ pagination.href.next | url }}">이전 페이지</a>
                </div>
            {% endif %}
        </div>

        <div class="flex justify-between mx-auto w-full">
            {% if page.url !== pagination.href.first %}
                <div class="mx-auto mb-4">
                    <a class="first-page md:mb-2" href="{{ pagination.href.first | url }}">처음 페이지</a>
                </div>

            {% endif %}

            {% if page.url !== pagination.href.last %}
                <div class="mx-auto">
                    <a class="last-page" href="{{ pagination.href.last | url }}">마지막 페이지</a>
                </div>
            {% endif %}
        </div>
    </div>

    <p class="text-center text-sm italic mb-10">(페이지 <span />
        {{ pagination.pageNumber + 1 }})</p>
</div>